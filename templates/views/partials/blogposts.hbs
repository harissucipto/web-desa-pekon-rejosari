<!-- Blog Post -->
{{# each data.posts.results}}
<div class="row" style="margin: 30px 0px; maring-right: 10px;">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">{{{title}}}</h2>
      <p class="card-text">{{{content.brief}}}</p>
      {{#if content.extended}}
      <a href="{{postUrl slug}}" class="btn btn-primary">Baca Lebih Lanjut &rarr;</a>
      {{/if}}
    </div>
    <div class="card-footer text-muted">
      Diposting pada {{ this._.publishedDate.format "DD-MM-YYYY" }} oleh
      <a href="#">Pekon Rejosari</a>
    </div>
  </div>
</div>

{{/each}}